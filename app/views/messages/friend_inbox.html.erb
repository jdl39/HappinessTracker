<h1> Friend Inbox </h1>
<ul>
<% @messages.each do |message| %>
	<li>
	  <div>Sender: <%= message.sender_id == current_user.id ? current_user.username : @viewed_user.username %></div>
	  <div>Receiver: <%= message.receiver_id == current_user.id ? current_user.username : @viewed_user.username %></div>
	  <div>Quote: <%= message.quote %></div>
	  <div>Content: <%= message.content %></div>
	  <div>Timestamp: <%= message.created_at %></div>
	</li>
   <% end %>
</ul>
