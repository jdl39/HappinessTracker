<!DOCTYPE html>
<html>

<head>

	<!-- meta and title -->
	<meta charset="utf-8" />
  <title><%= @title %></title>

  <!-- css -->
  <link href='http://fonts.googleapis.com/css?family=Oswald:300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:300,700' rel='stylesheet' type='text/css'>
  
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  <!-- js -->
  <%= csrf_meta_tags %>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="http://code.jquery.com/jquery-latest.min.js"></script>

  <!-- <%= javascript_include_tag "jquery" %> -->

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</head>

<body>
<div class="wrapper">
  
  <header>
    <div class="container clearfix">
      <div class="logo">
        <a href="/home">
          <img src="/assets/happapplogo.png" alt="HappApp">
        </a>
      </div><!-- /.logo -->
      <nav class="primary-nav">
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/track">Activities</a></li>
          <li><a href="/profile/<%= current_user.username %>">Profile</a></li>
          <li><a href="/goals">Goals</a></li>
          <li><a href="/challenges">Challenge</a></li>
		  <li><a href = "/profile?mode=inbox">Inbox</a></li>
		  <li><a href="/friends">Friends</a></li>
          <li><a href="" id="logout">Log Out</a></li>
        </ul>
      </nav><!-- /nav -->
    </div><!-- /.container -->
  </header>

  <main>
    <div class="container">
      <%= yield %>
    </div><!-- /.container -->
  </main><!-- /main -->

  <footer>
    <div class="container">
      <nav class="footer-nav">
        <ul>
          <li><a href="/home">Home</a></li>
          <li><a href="/track">Activities</a></li>
          <li><a href="/profile/<%= current_user.username %>">Profile</a></li>
          <li><a href="/goals">Goals</a></li>
		  <li><a href="/challenges">Challenge</a></li>
		  <li><a href="/profile?mode=inbox">Inbox</a></li>
		      <li><a href="/friends">Friends</a></li>
		      <li><a href="">Log Out</a></li>
        </ul>
      </nav><!-- /nav -->
      <nav class="footer-nav">
        <ul>
          <li><a href="">About</a></li>
          <li><a href="">Other Info?</a></li>
          <li><a href="">Terms</a></li>
          <li><a href="">Privacy</a></li>
        </ul>
      </nav><!-- /nav -->
      <div class="copyright">
        <small>&copy; 2014, HappApp</small>
      </div>
    </div><!-- /.container -->
  </footer><!-- /footer -->

</div><!-- /.wrapper -->

</body>

<script>
  var happiness_status = <%= current_user.is_happy %>

  $(document).ready(function() {
	togglePageLayout();

    $('#logout').click(function(e) {
      //alert('logging out');
      //window.location.replace("/signout");
      $.ajax({
        url: "/signout"
      });
    });
  });

</script>

</html>
